<style scoped lang="less" rel="stylesheet/less">
  @import "../styles/common";
  .my-card{
    width: 430rpx;
    border-radius: 10px;
    text-align: center;
    padding: 20rpx 0;
    background-color: #999999;
    color: #fff;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    &.m-active{
      background-color: @main_color;
    }
    .my-title{
      font-size: 38rpx;
      margin-bottom: 20rpx;
    }
  }
</style>
<template>
  <view class="my-card {{choose && (choose.COid == list.COid)?'m-active':''}}" catchtap="cardTap({{list}})">

  </view>
</template>
<script>
    import wepy from 'wepy';

    export default class Card extends wepy.page {
        props={
          list:{
            type:Object,
            default:null
          },
          choose:{
            type:Object,
            default:null
          }
        }
        data = {}
        methods = {
          cardTap(v){
            console.log(v);
            this.$emit('cardTap',v)
          }
        }
    }
